<div class="profile-container">
  <div class="profile-card">
    <div class="profile-header">
      <div class="profile-avatar">
        <%= @user.name[0].upcase %>
      </div>
      <h1 class="profile-title">Modifier le profil</h1>
      <p class="profile-subtitle">Mettez à jour vos informations personnelles</p>
    </div>
    
    <div class="profile-content">
      <%= form_with(model: @user, url: profile_path, method: :patch, local: true , data: { turbo: false }) do |form| %>
        <% if @user.errors.any? %>
          <div class="flash flash-error">
            <h2>
              <%= pluralize(@user.errors.count, "erreur") %> ont empêché la sauvegarde de ce profil:
            </h2>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        
        <div class="form-group">
          <%= form.label :name, "Nom", class: "form-label" %>
          <%= form.text_field :name, class: "form-input" %>
        </div>
        
        <div class="form-group">
          <%= form.label :email, "Email", class: "form-label" %>
          <%= form.email_field :email, class: "form-input" %>
        </div>
        
        <div class="form-group">
          <%= form.label :phone, "Numéro de téléphone", class: "form-label" %>
          <%= form.telephone_field :phone, class: "form-input" %>
        </div>
        
        <div class="form-group">
          <%= form.label :password, "Mot de passe", class: "form-label" %>
          <%= form.password_field :password, class: "form-input" %>
          <p class="form-hint">Laissez vide si vous ne souhaitez pas le changer</p>
        </div>
        
        <div class="form-group">
          <%= form.label :password_confirmation, "Confirmation du mot de passe", class: "form-label" %>
          <%= form.password_field :password_confirmation, class: "form-input" %>
        </div>
      
        <div class="profile-actions">
          <%= link_to "Annuler", profile_path, class: "btn btn-outline" %>
          <%= form.submit "Mettre à jour le profil", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>